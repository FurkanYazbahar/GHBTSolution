@model List<GoRestUserAdmin.UI.Models.UserDto>

@{
    ViewData["Title"] = "Kullanıcı Paneli";
}

<h2 class="d-flex justify-content-between align-items-center">
    <span>Kullanıcı Listesi</span>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#userModal" onclick="openUserCreateModal()">
        <i class="bi bi-plus-lg"></i> Yeni Kullanıcı
    </button>
</h2>

<div id="userTableContainer">
    <partial name="_UserTablePartial" model="Model" />
</div>

<!-- Kullanıcı Ekle / Güncelle Modal -->
<div class="modal fade" id="userModal" tabindex="-1" aria-labelledby="userModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="userModalLabel">Yeni Kullanıcı</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="userFormContainer">
                    <!-- AJAX ile partial yüklenecek -->
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openUserCreateModal() {
            $.get("/Users/Create", function (html) {
                $("#userFormContainer").html(html);
                $("#userModalLabel").text("Yeni Kullanıcı");
            });
        }
    </script>
}